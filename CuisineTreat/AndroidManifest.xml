<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cuisinetreat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.cuisinetreat.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.cuisinetreat.AllRecipesScreen"
            android:label="@string/title_activity_all_recipes_screen"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.cuisinetreat.RecipeDetail"
            android:label="@string/title_activity_recipe_detail"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.cuisinetreat.LoginActivitySplash"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.cuisinetreat.SignUpForm"
            android:label="@string/title_activity_login_screen"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.cuisinetreat.LoginPage"
            android:label="@string/title_activity_login_page"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.cuisinetreat.IngredientsScreen"
            android:label="@string/title_activity_ingredients_screen"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.cuisinetreat.PlayVideo"
            android:label="@string/title_activity_play_video"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.cuisinetreat.PhotoViewer"
            android:label="@string/title_activity_photo_viewer" >
        </activity>
        <activity
            android:name="com.example.cuisinetreat.FavoriteListScreen"
            android:label="@string/title_activity_favorite_list_screen" >
        </activity>
    </application>

</manifest>
